<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_title_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_desc_home"
        android:layout_width="367dp"
        android:layout_height="279dp"
        android:layout_marginBottom="24dp"
        android:text="Through this application, you will have all the necessary tools and knowledge to gain confidence in making choices and taking risks! In the first category, DE:CIDE, you will learn how to take risks and make decisions for yourself in a simple, comprehensive guide. In the second category, “Tools for the Indecisive”, you will find several functions to help your hesitant self to make choices based on random variables. Hopefully, this program will help you throughout your short, human lifespan in making a few of the thousands of decisions you make in a day! "
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_start_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button_start_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Get Started!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_desc_home" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Welcome to CHOICE, the Comprehensive, Helpful Option for Indecisive Carefree Earthlings!"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textview_desc_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_title_home" />
</androidx.constraintlayout.widget.ConstraintLayout>